&GLOBAL
	PROJECT_NAME Propanamide
	RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
	METHOD QS
	&DFT
		! The potentials are kept as exact copies with the output for provenance
		BASIS_SET_FILE_NAME aug-cc-pvtz
		BASIS_SET_FILE_NAME aug-cc-pvqz-rifit
		POTENTIAL_FILE_NAME ALL_POTENTIALS
		&MGRID
			CUTOFF 600
			REL_CUTOFF 60
		&END MGRID
		&QS
			EPS_DEFAULT 1.0E-10
			METHOD GAPW
		&END QS
		&SCF
			SCF_GUESS RESTART
			! TODO : Ask Jan about influence on G0W0
			EPS_SCF 1e-7
			MAX_SCF 200
			ADDED_MOS -1
			&DIAGONALIZATION ON
				ALGORITHM STANDARD
			&END DIAGONALIZATION
			&MIXING
				METHOD BROYDEN_MIXING
				ALPHA 0.4
				NBROYDEN 4
			&END MIXING
		&END SCF
		&XC
			&XC_FUNCTIONAL PBE0
			&END XC_FUNCTIONAL
		&END XC
		&POISSON
			PERIODIC NONE
			POISSON_SOLVER WAVELET
		&END POISSON
	&END DFT
	! Include G0W0 bandstructure correction
	&PROPERTIES
		&BANDSTRUCTURE
			&GW
				NUM_TIME_FREQ_POINTS 30
			&END GW
		&END BANDSTRUCTURE
	&END PROPERTIES
	&SUBSYS
		&CELL
			PERIODIC NONE
			ABC 20.0 20.0 20.0
		&END CELL
		&TOPOLOGY
			&CENTER_COORDINATES
			&END CENTER_COORDINATES
			COORD_FILE_FORMAT XYZ
			COORD_FILE_NAME coord.xyz
		&END TOPOLOGY
		&KIND H
			POTENTIAL ALL
			BASIS_SET ORB aug-cc-pvtz
			BASIS_SET RI_AUX aug-cc-pvqz-rifit
		&END KIND
		&KIND C
			POTENTIAL ALL
			BASIS_SET ORB aug-cc-pvtz
			BASIS_SET RI_AUX aug-cc-pvqz-rifit
		&END KIND
		&KIND O
			POTENTIAL ALL
			BASIS_SET ORB aug-cc-pvtz
			BASIS_SET RI_AUX aug-cc-pvqz-rifit
		&END KIND
		&KIND N
			POTENTIAL ALL
			BASIS_SET ORB aug-cc-pvtz
			BASIS_SET RI_AUX aug-cc-pvqz-rifit
		&END KIND
	&END SUBSYS
&END FORCE_EVAL
